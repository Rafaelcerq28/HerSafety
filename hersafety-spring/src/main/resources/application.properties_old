spring.application.name=hersafety
# Configurações de conexão com o MySQL
spring.datasource.url=jdbc:mysql://localhost:3306/herplace
spring.datasource.username=root
spring.datasource.password=24280720

# Key for maps api
maps.key=

# Key for openAi
# openai.key=${OPENAI_KEY}
openai.key=mykey
# Propriedade do driver JDBC
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Configurações do JPA e Hibernate
spring.jpa.hibernate.ddl-auto=update  
# Pode ser update, create, create-drop, validate
spring.jpa.show-sql=true  
# Para exibir as consultas SQL no console
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
# Ou MySQL5Dialect, dependendo da versão

# Habilita CORS global para todas as origens
spring.web.cors.allowed-origin-patterns=http://localhost:4200

#Debug mode
#debug=true